 <% if @article.errors.any? %>
 <h2>The following errors prevented the article from beign created</h2>
 <ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
<div class='row'>
  <div class='col-md-12'>
    <%= form_for @article do |f| %>
    <div class="form-group row">
     <%= f.label :title, class: "col-sm-2 col-for-label" %> 
     <div class="col-sm-8">
       <%= f.text_field :title, class: "form-control",placeholder: "Article title", autofocus: true %>
     </div>
   </div>
   <div class="form-group row">
    <%= f.label :description, class: "col-sm-2 col-for-label" %> 
    <div class="col-sm-8">
      <%= f.text_area :description, class: "form-control", placeholder: "description" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10 ml-auto">
      <%= f.submit class: "btn btn-primary btn-lg" %>
      <% end %>
      <div class="col-xs-12" align="center">
      [<%= link_to "Cancel Request and return to listing", articles_path %>]
      </div>
    </div>
  </div>